<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="80dp"

    android:background="@drawable/playlist_bg"

    >




        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_20"
            android:layout_marginLeft="@dimen/pad_20"
            android:layout_marginRight="5dip"
            android:layout_marginStart="@dimen/pad_20"
            android:layout_marginTop="@dimen/pad_10"
            android:layout_toLeftOf="@+id/rl_icon"
            android:layout_toRightOf="@+id/rl_player"
            android:orientation="vertical"

            android:padding="3dip">

            <TextView
                android:id="@+id/tv_matches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_gravity="right"

                android:layout_toRightOf="@+id/thumbnail"
                android:text="28 Matches"
                android:textColor="@color/Yellow"
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tv_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_marginLeft="@dimen/pad_10"
                android:layout_marginStart="@dimen/pad_10"

                android:layout_toRightOf="@+id/thumbnail"
                android:text="Daren Mathews"
                android:textColor="@color/White"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans" />


            <ImageView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/pad_5"
                android:background="@drawable/challenge_button"
                android:paddingBottom="@dimen/pad_10" />


        </LinearLayout>




    <RelativeLayout
        android:id="@+id/rl_icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/user_bg"

        android:src="@drawable/ic_launcher">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_player"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/user_bg"

        android:src="@drawable/ic_launcher">

        <ImageView
            android:id="@+id/img_player"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>
</RelativeLayout>